# RATDCS Environment Variables Template
# Copy this file to .env and fill in actual values
# NEVER commit the .env file with real credentials!

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================
RATDCS_ENVIRONMENT=development  # development, production, staging
RATDCS_LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
RATDCS_CONFIG_FILE=config/default.yaml

# ============================================================================
# DATABASE CREDENTIALS
# ============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ratdcs
POSTGRES_USER=ratdcs
POSTGRES_PASSWORD=your_secure_postgres_password_here

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ORG=ratdcs
INFLUXDB_BUCKET=telemetry
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ADMIN_PASSWORD=your_influxdb_admin_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ============================================================================
# MESSAGE QUEUE CREDENTIALS
# ============================================================================

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SASL_USERNAME=ratdcs
KAFKA_SASL_PASSWORD=your_kafka_password_here

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=ratdcs
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_VIRTUAL_HOST=ratdcs

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_min_32_characters_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# API Keys
API_KEY_MASTER=your_master_api_key_here
API_KEY_READONLY=your_readonly_api_key_here

# TLS/SSL Certificates
TLS_ENABLED=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here
GRAFANA_PORT=3000

# Jaeger
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_PARAM=0.1

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Model Paths (relative to project root)
ASTEROID_DETECTOR_MODEL_PATH=models/asteroid_detector/cnn_v1.h5
EXOPLANET_CLASSIFIER_LIGHTGBM_PATH=models/exoplanet_classifier/lightgbm_v1.pkl
EXOPLANET_CLASSIFIER_CNN_PATH=models/exoplanet_classifier/cnn_v1.h5
DEBRIS_PREDICTOR_HMM_PATH=models/debris_predictor/hmm_v1.pkl
DEBRIS_PREDICTOR_BNN_PATH=models/debris_predictor/bnn_v1.h5
RL_CONTROLLER_POLICY_PATH=models/rl_controller/ppo_policy_v1.zip

# Model Configuration
MODEL_DEVICE=cuda  # cuda, cpu, mps
GPU_MEMORY_FRACTION=0.8
BATCH_SIZE=32

# ============================================================================
# API CONFIGURATION
# ============================================================================

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# CORS
CORS_ORIGINS=http://localhost:3000,https://ratdcs.example.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
MAX_REQUEST_SIZE_MB=10

# ============================================================================
# GRPC CONFIGURATION
# ============================================================================

GRPC_SERVER_PORT=50051
GRPC_MAX_WORKERS=10
GRPC_MAX_MESSAGE_LENGTH_MB=100

# ============================================================================
# DATA SOURCES
# ============================================================================

# ZTF (Zwicky Transient Facility)
ZTF_DATA_URL=https://ztf.caltech.edu/data
ZTF_API_KEY=your_ztf_api_key_here

# TESS Mission Archive
TESS_API_URL=https://archive.stsci.edu/tess
TESS_API_KEY=your_tess_api_key_here

# Space-Track.org
SPACETRACK_USERNAME=your_spacetrack_username_here
SPACETRACK_PASSWORD=your_spacetrack_password_here

# ============================================================================
# CLOUD STORAGE (Optional)
# ============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_MODELS=ratdcs-models
S3_BUCKET_DATA=ratdcs-data
S3_BUCKET_BACKUPS=ratdcs-backups

# Google Cloud Storage (Alternative)
GCS_PROJECT_ID=your_gcp_project_id
GCS_CREDENTIALS_PATH=/path/to/gcp-credentials.json
GCS_BUCKET_MODELS=ratdcs-models
GCS_BUCKET_DATA=ratdcs-data

# ============================================================================
# KUBERNETES CONFIGURATION (Production)
# ============================================================================

KUBERNETES_NAMESPACE=ratdcs-production
KUBERNETES_SERVICE_ACCOUNT=ratdcs-sa
KUBERNETES_CLUSTER_NAME=ratdcs-cluster

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Thread Pool Settings
MAX_WORKERS=10
THREAD_POOL_SIZE=20

# Memory Limits
MAX_MEMORY_GB=16
CACHE_SIZE_GB=2

# Timeout Settings
REQUEST_TIMEOUT_SECONDS=30
INFERENCE_TIMEOUT_MS=500
DATABASE_TIMEOUT_SECONDS=10

# ============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# ============================================================================

DEBUG_MODE=false
PROFILING_ENABLED=false
MOCK_DATA_ENABLED=false
HOT_RELOAD=false

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# ============================================================================
# ALERTING & NOTIFICATIONS
# ============================================================================

# Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@ratdcs.example.com
SMTP_PASSWORD=your_smtp_password_here
ALERT_EMAIL_TO=ops-team@ratdcs.example.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#ratdcs-alerts

# PagerDuty
PAGERDUTY_API_KEY=your_pagerduty_api_key_here
PAGERDUTY_SERVICE_ID=your_service_id_here

# ============================================================================
# MISCELLANEOUS
# ============================================================================

# Timezone
TZ=UTC

# Random Seeds (for reproducibility)
RANDOM_SEED=42
NUMPY_SEED=42
TF_SEED=42

# Feature Flags
FEATURE_ASTEROID_DETECTION=true
FEATURE_EXOPLANET_CLASSIFICATION=true
FEATURE_DEBRIS_PREDICTION=true
FEATURE_RL_CONTROLLER=true
FEATURE_FAULT_TOLERANT_CONTROL=true